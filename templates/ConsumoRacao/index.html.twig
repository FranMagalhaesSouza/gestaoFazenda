{% extends 'base.html.twig' %}
{% block title %} {{ titulo }} {% endblock %}
{% block body %} 
    <h1>{{ titulo }}</h1>
    <a href="{{ path('consumo_racao_cadastrar') }}" class="btn btn-primary">Cadastrar Consumo de Ração </a>
    <table class="table">
        <thead>
            <tr>
                <td>#</td>
                <td>Animal</td>
                <td>Qtd Ração</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
            {% for consumo in consumos %}
                <tr>
                    <td>{{ consumo.id }}</td>
                    <td>{{ consumo.animal.descricao }}</td>
                    <td>{{ consumo.qtdRacao }}</td>
                    <td>
                        <a href="#" class="btn btn-primary">Editar</a>
                        <a href="#" class="btn btn-primary">Excluir</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}