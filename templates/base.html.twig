<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
       
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body> 
        <nav class="navbar navbar-expand navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="{{ path('home') }}">Gestão Fazenda</a>
                {% if is_granted('ROLE_USER') %}
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="nav-item">
                            <a href="{{ path('home') }}" class="nav-link">Home</a>
                        </li>  
                        <li class="nav-item">
                            <a href="{{ path('animal_index') }}" class="nav-link">Animais</a>
                        </li>  
                        <li class="nav-item">
                            <a href="{{ path('animal_abate') }}" class="nav-link">Abater animal </a>
                        </li>                      
                        <li class="nav-item">
                            <a href="{{ path('app_logout') }}" class="nav-link"> Sair </a>
                        </li>
                    </ul>    
                </div>
                {% endif %}
            </div>

        </nav>       
        <div class="container">
            {#{% if is_granted('ROLE_USER') %}
                <span> Usuário: {{ app.user.nome }}</span>
            {% endif %}#}
        {% block body %}
        
        {% endblock %}
    </div>
    </body>
   
</html>
